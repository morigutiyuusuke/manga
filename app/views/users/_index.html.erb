<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
         <td>フォロー数</td>
        <td><%= link_to user.followings.count, user_followings_path(user.id) %></td>
        <td>フォロワー数</td>
        <td><%= link_to user.followers.count, user_followers_path(user.id) %></td>
        <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
        <% end %>
        <td><%= link_to '詳細', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>